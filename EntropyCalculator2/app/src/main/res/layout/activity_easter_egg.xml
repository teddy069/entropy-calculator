<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EasterEgg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congrads, you have found the Secreat button!"
        android:layout_above="@+id/credits_built"
        android:textColor="#f00"
        android:textSize="17sp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This app was built by"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="25sp"
        android:id="@+id/credits_built"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vinayaga Pillai"
        android:layout_below="@+id/credits_built"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textColor="#00f"/>


</RelativeLayout>